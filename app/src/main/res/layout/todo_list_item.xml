<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tolist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <TextView
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:id="@+id/textview_highlight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/labels_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/labels_layout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textview_highlight"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name des Todos"
            android:id="@+id/todo_textview_name"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/todo_textview_deadline"
            android:layout_gravity="left|center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faelligkeit"
            android:id="@+id/todo_textview_deadline"
            android:layout_alignWithParentIfMissing="false"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_column="0"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textview_highlight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|center_vertical"
             />

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageview_todo_isfavourite"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_star_border_black_24dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/todo_checkbox_isdone"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/todo_checkbox_isdone" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo_checkbox_isdone"
        android:scaleX="1.90"
        android:scaleY="1.90"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top|center_vertical|bottom|right"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentStart="false"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        />


</RelativeLayout>