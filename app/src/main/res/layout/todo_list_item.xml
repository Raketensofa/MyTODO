<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tolist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true">

    <TextView
        android:layout_width="12dp"
        android:layout_height="match_parent"
        android:id="@+id/textview_highlight"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/labels_layout" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:id="@+id/labels_layout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name des Todos"
            android:id="@+id/todo_textview_name"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/black"
            android:singleLine="false"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/todo_textview_deadline"
            android:layout_gravity="left|center_vertical"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faelligkeit"
            android:id="@+id/todo_textview_deadline"
            android:layout_alignWithParentIfMissing="false"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_column="0"
            android:lines="1"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textview_highlight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left|center_vertical"
            android:clickable="true" />

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageview_todo_isfavourite"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/labels_layout"
        android:clickable="true"
        android:baselineAlignBottom="false"
        android:layout_toLeftOf="@+id/labels_layout"
        android:layout_marginRight="10dp" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageview_todo_isdone_2"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageview_todo_isfavourite"
        android:clickable="true"
        android:layout_toLeftOf="@+id/imageview_todo_isfavourite"
        android:layout_marginLeft="10dp" />

</RelativeLayout>