<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/tolist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:columnCount="27"
    android:rowCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name des Todos"
        android:id="@+id/todo_textview_name"
        android:layout_gravity="top|left|bottom"
        android:padding="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentRight="false"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/black"
        android:singleLine="false"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:text="Faelligkeit"
        android:id="@+id/todo_textview_deadline"
        android:padding="5dp"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/todo_textview_name"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo_checkbox_isdone"
        android:scaleX="1.95"
        android:scaleY="1.95"
        android:clickable="true"
        android:enabled="true"
        android:layout_alignParentEnd="true"
        android:layout_row="1"
        android:layout_column="12"
        android:layout_gravity="top|center_vertical|bottom|right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:checked="false" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo_start_isfavourite"
        android:scaleX="1.00"
        android:scaleY="1.00"
        android:numStars="1"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:layout_alignTop="@+id/todo_textview_name"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_rowSpan="2"
        android:layout_gravity="top|bottom|center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="2dp" />

</FrameLayout>