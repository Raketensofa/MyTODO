<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/todo_detail_item_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/dim_foreground_material_dark"
        android:foreground="@drawable/ic_person_white_24dp"
        android:layout_centerVertical="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name des Kontakts"
        android:id="@+id/textview_contact_name"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/todo_detail_item_icon"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_sms"
        android:src="@drawable/ic_sms_black_24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/textview_contact_name"
       />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageview_mail"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_mail_outline_black_24dp"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@id/imageview_sms" />
</RelativeLayout>