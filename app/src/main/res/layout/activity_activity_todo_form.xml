<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cgellner.mytodo.ActivityTodoForm"
    android:nestedScrollingEnabled="false">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/todo_name_edittext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        style="@android:style/Widget.Material.EditText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:autoText="false"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:hint="Name des To-Do"
        android:inputType="number|text|numberDecimal"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|textCapWords|textCapSentences|text|textCapCharacters|textMultiLine|numberDecimal"
        android:ems="10"
        android:id="@+id/todo_description_edittext"
        android:layout_below="@+id/todo_name_edittext"
        android:editable="true"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        style="@android:style/Widget.Material.EditText"
        android:layout_centerHorizontal="true"
        android:hint="Beschreibung" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/todo_date_edittext"
        android:layout_below="@+id/todo_description_edittext"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:editable="false"
        android:enabled="true"
        android:singleLine="true"
        android:hint="Fälligkeit Datum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/todo_time_edittext"
        android:singleLine="true"
        android:hint="Fälligkeit Zeit"
        android:layout_alignTop="@+id/todo_date_edittext"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:enabled="true"
        android:clickable="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/todo_isfavourite_switch"
        android:layout_below="@+id/todo_date_edittext"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Material.CompoundButton.Switch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/button_newTodo_save"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:enabled="true"
        android:clickable="true"
        style="@android:style/TextAppearance.Material.Button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
